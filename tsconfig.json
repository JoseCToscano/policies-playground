{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    /* Permissive Options */
    "strict": false,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "alwaysStrict": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,
    "noUncheckedIndexedAccess": false,
    "allowUnreachableCode": true,
    "allowUnusedLabels": true,
    "noFallthroughCasesInSwitch": false,
    "noImplicitReturns": false,
    "noPropertyAccessFromIndexSignature": false,
    "checkJs": false,

    /* Advanced Features */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowArbitraryExtensions": true,
    "allowImportingTsExtensions": true,
    "allowUmdGlobalAccess": true,
    "jsx": "preserve",
    "jsxImportSource": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "ESNext",
      "WebWorker",
      "WebWorker.ImportScripts",
      "Webworker.Iterable",
      "ScriptHost",
      "ES2015.Core",
      "ES2015.Collection",
      "ES2015.Generator",
      "ES2015.Iterable",
      "ES2015.Promise",
      "ES2015.Proxy",
      "ES2015.Reflect",
      "ES2015.Symbol",
      "ES2015.Symbol.WellKnown",
      "ES2016.Array.Include",
      "ES2017.object",
      "ES2017.Intl",
      "ES2017.SharedMemory",
      "ES2017.String",
      "ES2017.TypedArrays",
      "ES2018.Intl",
      "ES2018.Promise",
      "ES2018.RegExp",
      "ES2019.Array",
      "ES2019.Object",
      "ES2019.String",
      "ES2019.Symbol",
      "ES2020.String",
      "ES2020.Symbol.wellknown",
      "ES2021.Promise",
      "ES2021.String",
      "ES2021.WeakRef",
      "ES2022.Array",
      "ES2022.Object",
      "ES2022.String"
    ],
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": false,
    "plugins": [{ "name": "next" }],
    "incremental": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": [
    ".eslintrc.cjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    "**/*.mjs",
    "**/*.jsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
